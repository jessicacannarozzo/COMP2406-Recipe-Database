doctype html

html
  head
    title COMP2406 Recipe Database
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
    script(src="./recipePage.js")
    style
      include ./style.css

  body
    h1 COMP2406 Recipe Database

    fieldset
      legend Select a recipe!
      p
          label Recipe:
          select#recipeSelect(name="recipe")
            option 
      button#recipeViewButton View

    br
    label Name:
    br
    input(name='recipeName')#recipeName
  
    br
    br
    
    label Duration:
    br
    input(name='recipeDuration')#recipeDuration
    
    br
    br
    
    label Ingredients:
    br
    textarea(name='recipeIngredients')#recipeIngredients
    
    br
    br

    label Steps:
    br
    textarea(name='recipeDirections')#recipeDirections
    
    br
    br

    label Notes:
    br
    textarea(name='recipeNotes')#recipeNotes

    br
    br
    button#recipeSubmitButton Submit
